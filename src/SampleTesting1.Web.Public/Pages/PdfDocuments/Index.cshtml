@page
@using Microsoft.Extensions.Localization
@using SampleTesting1.Localization
@using SampleTesting1.Web.Public.Pages.PdfDocuments
@model IndexModel
@inject IStringLocalizer<SampleTesting1Resource> L

<div class="container">
    <h1>@L["PdfDocuments"]</h1>
    
    <div class="row" id="pdfDocumentsContainer">
        @foreach (var pdf in Model.PdfDocuments.Items)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@pdf.Title</h5>
                        <p class="card-text">@pdf.Description</p>
                        @if (!string.IsNullOrEmpty(pdf.Category))
                        {
                            <span class="badge bg-primary">@pdf.Category</span>
                        }
                        <div class="mt-3">
                            <a href="/PdfDocuments/Detail?id=@pdf.Id" class="btn btn-primary">@L["ViewDocument"]</a>
                        </div>
                        <small class="text-muted d-block mt-2">@pdf.CreationTime.ToShortDateString()</small>
                    </div>
                </div>
            </div>
        }
    </div>
    
    @if (Model.PdfDocuments.TotalCount == 0)
    {
        <div class="alert alert-info">
            <p>@L["NoPdfDocumentsFound"]</p>
        </div>
    }
</div>
